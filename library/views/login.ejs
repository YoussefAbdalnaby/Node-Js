<div class="container">

    <form method="POST" action='/login'>
        <!-- Email input -->
        <div class="form-outline mb-4">
          <input type="email" id="form1Example1" name="email" class="form-control" placeholder="Email"/>

        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <input type="password" id="form1Example2" name="password" class="form-control" placeholder="Password" />
        </div>

      <% if(loginErr){ %>
        <div class="alert alert-danger">
          <%= loginErr %>
        </div>

        <% } %>
       
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>


</div>

